mixin bootstrapForm(form)
	- const action = form.action || '#'
	- const method = form.method || 'post'
	- const rows = form.rows || []

	form.validate(action= action, method= method)
		for row in rows
			div.row
				- var fields = row.fields || []
				for field in fields
					-
						var sizes = field.sizes || ['xs-12', 'md-6']
						var type = field.type || 'text'
						var name = field.name || ''
						var btnClasses = field.btnClasses || []
						var label = field.label || 'You forgot the label'
						var value = field.value || undefined
						var options = field.options || []
						var btnIcon = field.btnIcon || undefined

						var wrapperAttrs = field.wrapperAttrs || {}
						var labelAttrs = field.labelAttrs || {}
						var inputAttrs = field.inputAttrs || {}

						var classes = 'form-group'
						for (const i in sizes)
							classes += ' col-' + sizes[i]

					div(class= classes)&attributes(wrapperAttrs)
						case type
							when 'text'
								label(for= name)&attributes(labelAttrs)= label
								input.form-control(id= name, name= name, type = 'text', value= value)&attributes(inputAttrs)

							when 'currency'
								label(for= name)&attributes(labelAttrs)= label
								div.input-group
									span.input-group-addon: i.far.fa-pound-sign
									input.form-control(id= name, name= name, type = 'number', value= value)&attributes(inputAttrs)

							when 'date'
								- if (value) value = new Date(value).toISOString().substr(0, 10)
								label(for= name)&attributes(labelAttrs)= label
								div.input-group
									span.input-group-addon: i.far.fa-calendar-alt
									input.form-control(id= name, name= name, type = 'date', value= value)&attributes(inputAttrs)

							when 'select'
								label(for= name)&attributes(labelAttrs)= label
								select.form-control(id= name, name= name, type = 'text')&attributes(inputAttrs)
									for option in options
										option(value= option[0], selected= (option[0] === value))= option[1]

							when 'checkbox'
								label= label
								for option in options
									div.checkbox
										- var checked = value === option[0] || value.indexOf(option[0]) >= 0
										label&attributes(labelAttrs)
											input(id= name, name= name, type= 'checkbox', value= option[0], checked= checked)
											| #{option[1]}

							when 'submit'
								-
									var btnClass = 'btn'
									for (const i in btnClasses)
										btnClass += ' ' + btnClasses[i]
								button(class= btnClass)&attributes(inputAttrs)
									if (btnIcon)
										i(class= 'far fa-fw ' + btnIcon)
									| #{label}


