extends ../../_shared/page-layout
include ../../_mixins/bootstrap-form

block page-body
	
	div.row
		div.col-xs-12
			+bootstrapForm({
				action: '/settings/profiles/edit/' + profile.id,
				method: 'post',
				rows: [
					{
						fields: [
							{
								type: 'text',
								name: 'name',
								label: 'Name',
								value: profile.name,
								inputAttrs: {
									required: true
								}
							}
						]
					},
					{
						fields: [
							{
								type: 'submit',
								label: 'Save',
								btnClasses: ['btn-success'],
								btnIcon: 'fa-save'
							}
						]
					}
				]
			})
