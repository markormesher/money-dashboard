extends ../../_shared/page-layout
include ../../_mixins/bootstrap-form

block page-body

	div.row
		div.col-xs-12
			+bootstrapForm({
				action: '/settings/accounts/edit/' + account.id,
				method: 'post',
				rows: [
					{
						fields: [
							{
								type: 'text',
								name: 'name',
								label: 'Name',
								value: account.name,
								inputAttrs: {
									required: true
								}
							},
							{
								type: 'select',
								name: 'type',
								label: 'Type',
								options: [
									['current', 'Current Account'],
									['savings', 'Savings Account'],
									['asset', 'Asset'],
									['other', 'Other']
								],
								value: account.type,
								inputAttrs: {
									required: true
								}
							}
						]
					},
					{
						fields: [
							{
								type: 'submit',
								label: 'Save',
								btnClasses: ['btn-success'],
								btnIcon: 'fa-save'
							}
						]
					}
				]
			})
