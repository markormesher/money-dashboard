include ../_mixins/bootstrap-form

div#editor-modal.modal.fade(tabindex = -1)
	div.modal-dialog
		div.modal-content
			form#editor-form.validate
				div.modal-header
					button.close(type = "button", data-dismiss = "modal" aria-label = "Close"): span(aria-hidden = "true") &times;
					h4.modal-title.create-only Create Transaction
					h4.modal-title.edit-only Edit Transaction

				div.modal-body
					+bootstrapForm({
						rows: [
							{
								fields: [
									{
										type: 'date',
										name: 'transactionDate',
										label: 'Transaction Date',
										inputAttrs: {
											required: true
										}
									},
									{
										type: 'date',
										name: 'effectiveDate',
										label: 'Effective Date',
										inputAttrs: {
											required: true
										}
									}
								]
							},
							{
								fields: [
									{
										type: 'select',
										name: 'account',
										label: 'Account',
										options: accounts,
										inputAttrs: {
											required: true
										}
									},
									{
										type: 'text',
										name: 'payee',
										label: 'Payee',
										inputAttrs: {
											required: true
										}
									}
								]
							},
							{
								fields: [
									{
										type: 'select',
										name: 'category',
										label: 'Category',
										options: categories,
										inputAttrs: {
											required: true
										}
									},
									{
										type: 'currency',
										name: 'amount',
										label: 'Amount',
										inputAttrs: {
											required: true
										}
									}
								]
							},
							{
								fields: [
									{
										sizes: ['xs-12'],
										type: 'textarea',
										name: 'note',
										label: 'Note'
									}
								]
							}
						]
					})

				div.modal-footer
					div.checkbox.pull-left.create-only
						label.text-muted
							input#add-another(type = 'checkbox', checked = 'checked')
							| Add another

					button#save-btn.btn.btn-primary
						i.far.fa-fw.fa-save
						|  Save
