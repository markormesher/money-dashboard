extends ../../_shared/page-layout

block page-head
	link(rel = 'stylesheet', href = '/_npm/daterangepicker/daterangepicker.css')
	link(rel = 'stylesheet', href = '/_npm/chartist/dist/chartist.min.css')

block page-title-extra
	//button#settings-btn.btn.btn-info
		i.far.fa-fw.fa-cogs
		| Configure
	button#date-range-btn.btn.btn-default
		i.far.fa-fw.fa-calendar-alt
		| #[span.startDate] - #[span.endDate]

block page-body

	div.row
		div.col-xs-12.col-md-9
			div#balance-graph
		div.col-xs-12.col-md-3
			div.x_panel
				div.x_title
					h2
						i.far.fa-fw.fa-exchange.fa-rotate-90
						| Summary
					div.clearfix

				div.x_content
					div.row
						p.col-xs-6
							strong Min Total:
							br
							span#min-value
							br
							span.text-muted#min-value-date

						p.col-xs-6
							strong Max Total:
							br
							span#max-value
							br
							span.text-muted#max-value-date

						p.col-xs-6
							strong Change:
							br
							i.far.fa-fw.fa-caret-right
							span#change-abs

block page-scripts
	script(src = '/_npm/moment/moment.js')
	script(src = '/_npm/daterangepicker/daterangepicker.js')
	script(src = '/_npm/chartist/dist/chartist.min.js')
