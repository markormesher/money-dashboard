{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src/app.ts",
		"src/public/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
