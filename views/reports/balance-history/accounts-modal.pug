div#accounts-modal.modal.fade(tabindex = -1)
	div.modal-dialog
		div.modal-content
			div.modal-header
				button.close(type = "button", data-dismiss = "modal" aria-label = "Close"): span(aria-hidden = "true") &times;
				h4.modal-title Select Accounts to Show

			div.modal-body
				div.checkbox-set
					- var groupedAccounts = { 'current': [], 'savings': [], 'asset': [] }
					- var groupTitles = { 'current': 'Current Accounts', 'savings': 'Savings Accounts', 'asset': 'Assets' }

					for a in accounts
						- groupedAccounts[a.type].push(a)

					- firstGroup = true
					for group in ['current', 'savings', 'asset']
						if (groupedAccounts[group].length > 0)
							div.group-wrapper
								div.checkbox(class = firstGroup ? 'no-margin' : 'top-margin'): label
									input(type = 'checkbox', value = group, checked = true).group-check-box.text-muted
									strong  #{groupTitles[group]}

								for a in groupedAccounts[group]
									div.checkbox(style = 'width: 49%; display: inline-block;'): label
										input(type = 'checkbox', value = a.id, checked = true).account-check-box
										|  #{a.name}
										if (!a.active)
											|  (inactive)

						- firstGroup = false

			div.modal-footer
				button#update-btn.btn.btn-primary
					i.fa.fa-fw.fa-check
					|  Update
