{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"jsx": "react",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"outDir": "./build",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"alwaysStrict": true,
		"baseUrl": "./",
		"allowJs": true,
		"removeComments": false,
		"sourceMap": true
	},
	"exclude": [
		"./node_modules"
	]
}
