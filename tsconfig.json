{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "allowJs": true,
    "removeComments": false,
    "sourceMap": true
  },
  "include": ["./src/server.ts"],
  "exclude": ["./node_modules"]
}
